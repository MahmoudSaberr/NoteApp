<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen"
    android:background="@color/yellow">

     <ImageView
         android:id="@+id/splash_screen_background_iv"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         app:srcCompat="@drawable/ic_pray"/>

    <TextView
        android:id="@+id/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="496dp"
        android:fontFamily="@font/heading"
        android:gravity="center"
        android:text="@string/app_name"
        android:textSize="100dp"
        app:layout_constraintEnd_toEndOf="@id/splash_screen_background_iv"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/splash_screen_background_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/develop_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:text="@string/devrlop_by"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/splash_screen_background_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>